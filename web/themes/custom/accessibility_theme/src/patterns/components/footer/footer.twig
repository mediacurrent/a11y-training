{{ attach_library('accessibility_theme/footer') }}
<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <div class="footer__logo">
        {%
          include "@accessibility_theme/site-logo/site-logo.twig" with {
            link: logo.link
          } only
        %}
      </div>
      <div class="footer__contact footer__contact--address">
        {%
          include "@accessibility_theme/contact/contact.twig" with {
            address: contact.address
          } only
        %}
      </div>
      <div class="footer__contact footer__contact--links">
        {%
          include "@accessibility_theme/contact/contact.twig" with {
            items: contact.items
          } only
        %}
      </div>
      <div class="footer__social">
        {# TODO: put social icons in here once component is complete #}
      </div>
    </div>
    <div class="footer__subcontent">
      <div class="footer__copyright">
          {{ copyright }}
      </div>
      <div class="footer__menu">
        {%
          include "@accessibility_theme/footer-menu/footer-menu.twig" with {
            items: menu.items
          } only
        %}
      </div>
    </div>
  </div>
</footer>