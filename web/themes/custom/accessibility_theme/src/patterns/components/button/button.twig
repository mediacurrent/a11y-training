{{ attach_library('accessibility_theme/button') }}

{# Presence of a url in the passed button object determines type of  #}
{% if button.url %}
  <a href="{{ button.url }}" class="button{{ button.modifier ? ' ' ~ button.modifier }}">
    {{ button.text }}
  </a>
{% else %}
  <button class="button{{ button.modifier ? ' ' ~ button.modifier }}{{ button.modifier == 'is-disabled' ? ' disabled' }}">
    {{ button.text }}
  </button>
{% endif %}
